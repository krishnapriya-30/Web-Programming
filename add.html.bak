<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Registration Form</title>
  <style>
    body {
      background-color: #ffe6f0;
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }

    .container {
      width: 50%;
      margin: 40px auto;
      background-color: #fff;
      padding: 30px 40px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
    }

    h1 {
      text-align: center;
      color: #d63384;
      margin-bottom: 30px;
    }

    .form-group {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
    }

    .form-group label {
      width: 180px;
      font-size: 16px;
      font-weight: bold;
      text-align: right;
      margin-right: 15px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
      flex: 1;
      padding: 8px;
      font-size: 14px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    textarea {
      resize: vertical;
    }

    .buttons {
      text-align: center;
      margin-top: 20px;
    }

    input[type="submit"] {
      background-color: #d63384;
      color: white;
      padding: 10px 25px;
      margin: 0 10px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }

    input[type="submit"]:hover {
      background-color: #c2185b;
    }
  </style>
  <script>
    function validate() {
      var name = document.getElementById("nam").value;
      var passwd = document.getElementById("pwd").value;
      var confirmPass = document.getElementById("cpwd").value;
      var phone = document.getElementById("pno").value;

      if (name == "") {
        alert('Name cannot be blank');
        return false;
      } else if (!isNaN(name)) {
        alert('Name must contain alphabets!');
        return false;
      } else if (passwd == "") {
        alert('Enter a Password');
        return false;
      } else if (passwd.length < 8) {
        alert('Password must be at least 8 characters');
        return false;
      } else if (confirmPass == "") {
        alert('Please confirm your password');
        return false;
      } else if (passwd !== confirmPass) {
        alert('Passwords do not match');
        return false;
      } else if (phone == "") {
        alert('Enter your phone number!');
        return false;
      } else if (isNaN(phone)) {
        alert('Invalid Phone Number');
        return false;
      } else if (phone.length != 10) {
        alert('Not a Valid Phone Number (need 10 digits)');
        return false;
      } else {
        alert('Thank You for Registration');
        return true;
      }
    }
  </script>
</head>
<body>
<div class="container">
  <h1><u>REGISTRATION FORM</u></h1>
  <form onsubmit="return validate()">
    <div class="form-group">
      <label for="nam">Name:</label>
      <input type="text" placeholder="Name" id="nam">
    </div>

    <div class="form-group">
      <label for="pwd">Password:</label>
      <input type="password" id="pwd" placeholder="Enter password">
    </div>

    <div class="form-group">
      <label for="cpwd">Confirm Password:</label>
      <input type="password" id="cpwd" placeholder="Re-enter password">
    </div>

    <div class="form-group">
      <label for="pno">Phone Number:</label>
      <input type="text" placeholder="Phone Number" id="pno">
    </div>

    <!-- Other fields (Address, DOB, Email, etc.) go here -->

    <div class="buttons">
      <input type="submit" value="Submit">
      <input type="submit" value="Cancel">
    </div>
  </form>
</div>
</body>
</html>
